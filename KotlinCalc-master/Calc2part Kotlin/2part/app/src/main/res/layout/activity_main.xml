<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3F51B5"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="237dp"
            android:layout_weight="0"
            android:background="#575f69"
            android:textColor="#ffffff"
            android:gravity="bottom|right"
            android:inputType="textPersonName"
            android:text=""

            android:textAppearance="@style/TextAppearance.AppCompat.Medium"

            android:textSize="50dp" />


        <Button
            android:id="@+id/bt_sqr"
            android:layout_width="157dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="#FDB6B6B6"
            android:text="cancel"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />


        <LinearLayout
            android:id="@+id/linearLayout0"
            android:layout_width="386dp"
            android:layout_height="105dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#FFFFFF"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_AC"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="AC"
                android:textColor="#ffffff"
                 />

            <Button
                android:id="@+id/bt_sqrt"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="sqrt"
                android:textColor="#ffffff"
                 />

            <Button
                android:id="@+id/percent"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="%"
                android:textColor="#ffffff"
                />

            <Button
                android:id="@+id/bt_cancel"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="DEl"
                android:textColor="#3F51B5"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="386dp"
            android:layout_height="105dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_7"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="7"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_8"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="8"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_9"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="9"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_div"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="/"
                android:textColor="#3F51B5"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="386dp"
            android:layout_height="105dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
           >

            <Button
                android:id="@+id/bt_4"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="4"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_5"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="5"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_6"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="6"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_mult"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="*"
                android:textColor="#3F51B5"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="386dp"
            android:layout_height="105dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="1"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_3"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="3"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_minus"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="-"
                android:textColor="#3F51B5"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="386dp"
            android:layout_height="105dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_0"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_point"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="."
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_eq"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="="
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bt_plus"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="#101736"
                android:text="+"
                android:textColor="#3F51B5"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_weight="0"
                android:backgroundTint="#FF4D4D4D">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="65dp"
                        android:layout_weight="0"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_sin"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:background="#3F51B5"
                            android:text="sin"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#FFFFFF"
                            />

                        <Button
                            android:id="@+id/bt_cos"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:background="#3F51B5"
                            android:text="cos"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#FFFFFF"
                           />



                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:id="@+id/linearLayout7"
                        android:layout_width="300dp"
                        android:layout_height="65dp"
                        android:backgroundTint="#FFFFFF"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_tg"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:background="#3F51B5"
                            android:text="tg"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#FFFFFF"
                           />

                        <Button
                            android:id="@+id/bt_ctg"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:background="#3F51B5"
                            android:text="ctg"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#FFFFFF"
                             />



                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="65dp"
                        android:orientation="horizontal">



                        <Button
                            android:id="@+id/bt_fac"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:background="#3F51B5"
                            android:text="!"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#FFFFFF"
                           />

                        <Button
                            android:id="@+id/bt_squareNM"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:background="#3F51B5"
                            android:text="sqrNM"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#FFFFFF"
                            />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="65dp"
                        android:background="#3F51B5"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bt_ln"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:background="#3F51B5"
                            android:text="ln"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#FFFFFF"
                          />

                        <Button
                            android:id="@+id/bt_log"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="100dp"
                            android:layout_height="65dp"
                            android:background="#3F51B5"
                            android:text="log"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#FFFFFF"
                             />
                    </LinearLayout>
                </TableRow>
            </TableLayout>


    </LinearLayout>
    </LinearLayout>
</LinearLayout>

